{
  "name": "css-var-bind",
  "version": "0.0.1",
  "description": "A utility web component which binds (and syncs) inputs to CSS variables",
  "keywords": [
    "web-components",
    "css-variables",
    "custom-elements",
    "css-custom-properties",
    "input-binding",
    "reactive",
    "vanilla-js"
  ],
  "author": "Jacob Berglund",
  "license": "MIT",
  "customElements": "dist/custom-elements.json",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jberglund/css-var-bind.git"
  },
  "bugs": {
    "url": "https://github.com/jberglund/css-var-bind/issues"
  },
  "homepage": "https://github.com/jberglund/css-var-bind#readme",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./custom-elements.json": "./custom-elements.json"
  },
  "files": [
    "dist",
    "custom-elements.json"
  ],
  "scripts": {
    "build": "bun run tsc",
    "build:docs": "bun build ./docs/index.html",
    "analyze": "cem analyze",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "publint": "bunx publint",
    "dev": "bun index.html",
    "prepublishOnly": "bun run lint && bun run build && bun run analyze",
    "predeploy": "bun run build:docs"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@custom-elements-manifest/analyzer": "^0.11.0",
    "typescript": "^5.9.3"
  }
}
